          <li class="postbit postbitim postcontainer" id="post_755">
        	<div class="postdetails_noavatar">
        		<div class="posthead">
                                
                                        <span class="postdate old">
                                                
                                                        <span class="date">01-17-2010&nbsp;<span class="time">09:00 AM</span></span>
                                                
                                        </span>
                                        <span class="nodecontrols">
                                                
                                                        <a name="post755" href="/web/20100919073129/http://www.wonderfulwaterloo.com/showthread.php/98-Amalgamation?p=755#post755" class="postcounter">#18</a><a id="postcount755" name="18"></a>
                                                
                                                
                                                
                                        </span>
                                
        		</div>
        
        		<div class="userinfo">
        			<div class="contact">
        				
        					<a class="postuseravatarlink" href="/web/20100919073129/http://www.wonderfulwaterloo.com/member.php/4-Spokes" title="Spokes is offline">
        						
        							<img src="/web/20100919073129im_/http://www.wonderfulwaterloo.com/image.php?u=4&amp;dateline=1262883798" alt="Spokes's Avatar" />
        						
